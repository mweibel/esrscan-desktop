{
  "name": "ESRScan",
  "version": "0.0.1",
  "description": "Receiver listening for scanned ESR data on the local network",
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron src/main.js & webpack-dev-server --hot --inline --content-base src/frontend/",
    "test": "mocha --compilers js:babel-core/register",
    "lint": "./node_modules/.bin/eslint .",

    "clean": "rm -rf ./release",
    "clean:osx": "rm -rf ./release/osx",
    "clean:win": "rm -rf ./release/win",
    "clean:linux": "rm -rf ./release/linux",
    "clean:dist": "rm -rf ./dist",

    "copy:dist": "cp ./src/frontend/index.html ./src/main.js ./src/server.js ./README.md dist",

    "dist": "npm run clean:dist && npm run build:webpack && npm run copy:dist",

    "pack": "npm run clean && npm run pack:osx && npm run pack:win && npm run pack:linux",
    "pack:osx": "npm run clean:osx && node scripts/package.js --os=osx",
    "pack:win": "npm run clean:win && node scripts/package.js --os=win",
    "pack:linux": "npm run clean:linux && node scripts/package.js --os=linux",

    "build": "npm run build:osx && npm run build:win && npm run build:linux",
    "build:osx": "npm run pack:osx && electron-builder \"release/osx/ESRScan-darwin-x64/ESRScan.app\" --platform=osx --out=\"release/osx\" --config=builder.json",
    "build:win": "npm run pack:win && electron-builder \"release/win/ESRScan-win32\" --platform=win --out=\"release/win\" --config=builder.json",

    "build:webpack": "NODE_ENV=production ./node_modules/.bin/webpack --config webpack.config.js --bail"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mweibel/ESRScannerServer.git"
  },
  "keywords": [
    "ESR",
    "Einzahlungsschein",
    "Bonjour"
  ],
  "author": "Michael Weibel <michael.weibel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mweibel/ESRScannerReceiver/issues"
  },
  "homepage": "https://github.com/mweibel/ESRScannerReceiver",
  "devDependencies": {
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "css-loader": "^0.23.1",
    "deep-freeze": "0.0.1",
    "electron-builder": "^2.5.0",
    "electron-debug": "^0.5.1",
    "electron-packager": "^5.2.0",
    "electron-prebuilt": "^0.36.2",
    "envify": "^3.4.0",
    "eslint": "^1.10.3",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.10.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.0.0",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.1",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0",
    "webpack-target-electron-renderer": "^0.3.0"
  },
  "dependencies": {
    "mdns": "^2.2.10",
    "network-address": "^1.0.0",
    "os-locale": "^1.4.0",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "redux": "^3.0.5",
    "react-redux": "^4.0.2"
  },
  "privaate": true
}
